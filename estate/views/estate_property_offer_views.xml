<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>

    
    </record>


    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            
               
            
            <tree editable="bottom" decoration-success="status=='accepted'"
            decoration-danger="status=='refused'"  >

                <field name="property_type_id" />

                <field name="price" />
                
                <field name="partner_id" />

                <button name="action_accepted"  type="object" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                <button name="action_refused"  type="object" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}"/>

                <field name="status" invisible="1"/>

            </tree>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">

        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>
                      
                        <field name="price" />

                        <field name="status" />

                        <field name="partner_id" />

                        <field name="validity"/>
                        <field name="date_deadline" />

                      

                        

                    </group>


                </sheet>
            </form>
        </field>
    </record>


</odoo>